<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#303030"
    tools:context=".Next3">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:backgroundTint="#424242">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:text="@string/Title_Equipment"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:translationY="150dp"
        android:translationX="20dp"
        android:textSize="22dp"
        android:text="@string/cavalletto"
        android:id="@+id/string_cavalletto">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:translationY="200dp"
        android:textSize="22dp"
        android:text="@string/linkto_cavalletto"
        android:id="@+id/string_linkto_cavalletto">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:translationY="350dp"
        android:translationX="20dp"
        android:textSize="22dp"
        android:text="@string/intervallometro"
        android:id="@+id/string_intervallometro">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:translationY="400dp"
        android:textSize="22dp"
        android:text="@string/linkto_intervallometro"
        android:id="@+id/string_linkto_intervallometro">
    </TextView>

    <ImageButton
        android:id="@+id/imageButton_main"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:backgroundTint="?attr/colorButtonNormal"
        android:onClick="home"
        android:translationX="5dp"
        android:translationY="670dp"
        app:srcCompat="@android:drawable/ic_media_ff" />
</RelativeLayout>