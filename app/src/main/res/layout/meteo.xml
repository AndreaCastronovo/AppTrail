<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/relativeLayout"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#303030"
tools:context=".CalcolatriceActivity">


<!--    Activity Title-->

<androidx.cardview.widget.CardView
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="187dp"
    android:backgroundTint="#424242"
    android:translationY="-120dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="6dp"
    app:layout_constraintBottom_toTopOf="@+id/cardView4"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_centerInParent="true"
        android:text="CONDIZIONI LUNA"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:translationY="135dp" />
</androidx.cardview.widget.CardView>


<!--    secondo bottone   (canon) -->


<androidx.cardview.widget.CardView
    android:id="@+id/cardView2"
    android:layout_width="200dp"
    android:layout_height="90dp"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:translationY="30dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageButton
        android:id="@+id/cloud"
        android:layout_width="270dp"
        android:layout_height="138dp"
        android:scaleType="centerInside"
        android:src="@drawable/cloud"
        android:translationX="-38dp"
        android:translationY="-25dp" />
</androidx.cardview.widget.CardView>




<!--    terzo bottone-->


<androidx.cardview.widget.CardView
    android:id="@+id/cardView3"
    android:layout_width="200dp"
    android:layout_height="90dp"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_marginTop="30dp"
    android:translationY="30dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:layout_constraintEnd_toEndOf="@+id/cardView2"
    app:layout_constraintStart_toStartOf="@+id/cardView2"
    app:layout_constraintTop_toBottomOf="@+id/cardView2">

    <ImageButton
        android:id="@+id/fullmoon"
        android:layout_width="350dp"
        android:layout_height="140dp"
        android:scaleType="centerInside"
        android:src="@drawable/fullmoon"
        android:translationX="-75dp"
        android:translationY="-25dp" />

</androidx.cardview.widget.CardView>

<!--    PRIMO BOTTONE-->

<androidx.cardview.widget.CardView
    android:id="@+id/cardView4"
    android:layout_width="200dp"
    android:layout_height="90dp"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_marginBottom="30dp"
    android:translationY="30dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:layout_constraintBottom_toTopOf="@+id/cardView2"
    app:layout_constraintEnd_toEndOf="@+id/cardView2"
    app:layout_constraintHorizontal_bias="0.58"
    app:layout_constraintStart_toStartOf="@+id/cardView2">

    <ImageButton
        android:id="@+id/halfmoon"
        android:layout_width="224dp"
        android:layout_height="112dp"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:src="@drawable/halfmoon" />
</androidx.cardview.widget.CardView>

